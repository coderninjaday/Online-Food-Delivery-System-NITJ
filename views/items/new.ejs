<%- include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Add New Item to <%= canteen.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/canteens/<%= canteen._id %>/items" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="item[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/canteens">Go Back</a>
        </div>
    </div>
<%- include ../partials/footer %>

