<% include ../partials/header %>
<div class="row">
    <div class="col-md-3">
        <p class="lead">Foddie
        </p>
        <div class="list-group">
            <li class="list-group-item active">Info 1</li>
            <li class="list-group-item">Info 2</li>
            <li class="list-group-item">Info 3</li>
        </div>
    </div>
    <div class="col-md-9">
        <div class="thumbnail">
            <img class="img-responsive" src="<%= canteen.image %>">
            <div class="caption-full">
                <h4 class="pull-right">$9.00/night</h4>
                <h4><a><%=canteen.name%></a></h4>
                <p><%= canteen.description %></p>
                <p>
                    <em>Submitted By <%= canteen.owner.username %></em>
                </p>
                <% if(currentUser && canteen.owner.id.equals(currentUser._id)){ %>
                <a class="btn btn-warning" href="/canteens/<%= canteen._id %>/edit">Edit Canteen</a>
                <% } %>
            </div>
        </div>
        <div class="well">
            <div class="text-right">
                <a class="btn btn-success" href="/canteens/<%= canteen._id %>/item
s/new">Add New Item
                </a>
            </div>
            <hr>
            <% canteen.items.forEach(function(item){ %>
            <div class="row">
                <div class="col-md-12">
                    <strong><%= item.owner.username %></strong>
                    <span class="pull-right">10 days ago</span>
                    <div>
                        <%= item.text %>

                        <!-- <% if(currentUser && item.owner.id.equals(currentUser._id)){ %> -->
                        <form style="display: inline" class="pull-right" action="/canteens/<%=canteen._id%>/items/<%=item._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">DELETE</button>
                            <a href="/canteens/<%=canteen._id%>/items/<%=item._id%>/edit" class="btn btn-xs btn-info">EDIT</a>
                        </form>
                        <!-- <% } %> -->
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>

<% include ../partials/footer %>